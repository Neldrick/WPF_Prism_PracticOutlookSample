<Window x:Class="SampleOutlook.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:core="clr-namespace:SampleOutlook.Core;assembly=SampleOutlook.Core"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    <Grid Width="Auto" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="120"  MaxHeight="150" Height="*"/>
            <RowDefinition MinHeight="250" Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="0 0 0 1" BorderBrush="Black">
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.RibbonRegion}"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" BorderThickness="0 0 1 0" BorderBrush="Black">
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.OutlookGroupRegion}"/>
        </Border>
        <ContentControl Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="2"  prism:RegionManager.RegionName="{x:Static core:RegionNames.ContentRegion}" />
    </Grid>   
    
</Window>
