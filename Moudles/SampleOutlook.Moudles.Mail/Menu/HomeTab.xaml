<UserControl x:Class="SampleOutlook.Moudles.Mail.Menu.HomeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SampleOutlook.Moudles.Mail.Menu">
    <DockPanel MinHeight="120" LastChildFill="True">
        <TabControl DockPanel.Dock="Left">
            <TabItem Header="Home">
                <DockPanel LastChildFill="True">
                    <Button Name="Home" DockPanel.Dock="Left" Width="80"/>
                    <Grid DockPanel.Dock="Right"/>
                </DockPanel>
            </TabItem>
            <TabItem Header="Unknown">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
